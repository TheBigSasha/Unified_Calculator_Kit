<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Uckit.view.EquationsFXMLController">
    <center>
        <JFXListView fx:id="equations" prefWidth="450" />
    </center>
    <left>
    </left>
    <right>
    </right>
   <top>
        <Button fx:id="solve" onAction="#solve" text="Solve" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <FlowPane alignment="BASELINE_CENTER" prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="46.0" prefWidth="311.0">
               <children>
                  <Label text="Equation" />
                  <TextField fx:id="equationBox" prefHeight="25.0" prefWidth="400.0" />
               </children>
            </VBox>
             <VBox prefHeight="46.0" prefWidth="140.0">
                 <children>
                     <Label text="Return Variable" />
                     <ComboBox fx:id="returnVar" />
                 </children>
             </VBox>
             <VBox prefHeight="46.0" prefWidth="140.0">
                 <children>
                     <Label text="Input Variables" />
                     <CheckComboBox fx:id="inputVars" />
                 </children>
             </VBox>
            <Button mnemonicParsing="false" onAction="#addEquation" text="Add" />
         </children>
      </FlowPane>
   </bottom>

</BorderPane>
